rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ðŸ”“ Allow public read access to pharmacies and products
    match /pharmacies/{pharmacy} {
      allow read: if true;
      allow write: if request.auth != null; // Temporarily allow auth users to seed
    }
    match /products/{product} {
      allow read: if true;
      allow write: if request.auth != null; // Temporarily allow auth users to seed
    }
    match /pharmacy_inventory/{item} {
      allow read: if true;
      allow write: if request.auth != null; // Pharmacists can update stock
    }
    
    // ðŸ‘¤ Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ðŸ›’ Orders
    match /orders/{orderId} {
      // Users can create orders and read their own
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.pharmacyId == request.auth.token.pharmacyId);
      allow update: if request.auth != null; // Status updates
    }
    
    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false; 
    }
  }
}
